<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/itemsListFragment">

    <fragment
        android:id="@+id/itemsListFragment"
        android:name="com.example.sharingang.ItemsListFragment"
        android:label="Items"
        tools:layout="@layout/fragment_items_list">
        <action
            android:id="@+id/action_itemsListFragment_to_newItemFragment"
            app:destination="@id/newItemFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_editItemFragment"
            app:destination="@id/editItemFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_detailedItemFragment"
            app:destination="@id/detailedItemFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_mapFragment"
            app:destination="@+id/mapFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_wishlistViewFragment"
            app:destination="@id/wishlistViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/newItemFragment"
        android:name="com.example.sharingang.NewItemFragment"
        android:label="New Item"
        tools:layout="@layout/fragment_new_item">
        <action
            android:id="@+id/action_newItemFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.example.sharingang.EditItemFragment"
        android:label="Edit Item"
        tools:layout="@layout/fragment_edit_item">
        <action
            android:id="@+id/action_editItemFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
        <argument
            android:name="item"
            app:argType="com.example.sharingang.items.Item" />
    </fragment>
    <fragment
        android:id="@+id/detailedItemFragment"
        android:name="com.example.sharingang.DetailedItemFragment"
        android:label="Detailed View" >
        <argument
            android:name="item"
            app:argType="com.example.sharingang.items.Item" />
        <action
            android:id="@+id/action_detailedItemFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.sharingang.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.sharingang.MapFragment"
        android:label="Map" >
        <action
            android:id="@+id/action_mapFragment_to_detailedItemFragment"
            app:destination="@id/detailedItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.sharingang.UserProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/user_profile_fragment">
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.sharingang.AccountFragment"
        android:label="Account" />
    <fragment
        android:id="@+id/wishlistViewFragment"
        android:name="com.example.sharingang.WishlistViewFragment"
        android:label="wishlistViewFragment" >
        <action
            android:id="@+id/action_wishlistViewFragment_to_detailedItemFragment"
            app:destination="@id/detailedItemFragment" />
        <action
            android:id="@+id/action_wishlistViewFragment_to_editItemFragment"
            app:destination="@id/editItemFragment" />
    </fragment>
</navigation>
